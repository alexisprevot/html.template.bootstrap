{% if not this.hidden %}
{% set menuCssClass = this.cssClass ~ (this.active?" active":"") ~ (this.children?" dropdown":"") %}
<li{% if menuCssClass %} class="{{ menuCssClass }}"{% endif %}>
{%- if this.url is defined or this.children  %}<a href="{{ this.link ? this.link : '#' }}" {% if this.children %}class="dropdown-toggle" data-toggle="dropdown"{% endif %}>{{ this.label }} {% if children %}<b class="caret"></b>{% endif %}</a>{% else %}{{ this.label }}{% endif -%}
{% if this.children %}
<ul class="dropdown-menu">
	{%- for child in this.children -%}
		{{- toHtml(child) -}}
	{%- endfor -%}
</ul>
{%- endif -%}
</li>
{% endif %}
